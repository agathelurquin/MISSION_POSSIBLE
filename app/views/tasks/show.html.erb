<div class="container border bg-light mt-3">
<h1 class="text-center"> Task: <%= @task.name %></h1>
  <div class="container">
    <p class="well">Description: <%= @task.description %></p>
    <p class="well">Due date: <%= @task.due_date %></p>
    <p class="well">Estimated effort: <%= @task.estimated_effort %></p>
    <p class="well">Status: <%= @task.status %></p>
    <p class="well">Completion date: <%= @task.completion_date %></p>
  </div>
      <%= link_to 'Edit task', edit_project_task_path(@project, @task)%>
      <%= link_to 'Delete task', task_path(@task), method: 'delete'%>
  <%= link_to 'Go back to project', project_path(@task.project)%>
</div>


<div class="container border bg-light mt-3">
  <h2>Members already assigned to this task</h2>
  <ul>
    <% @task.users.each do |user| %>
      <li><%= user.name %></li>
    <% end %>
  </ul>
</div>
<br><br><br>
<div class="container">
  <h2 class="ui header">Assign new member</h2>
  <span>
    <div class="ui inline dropdown">
      <ul>
        <%  @users_available.each do |user| %>
          <li><%= link_to user.name, task_assignments_path(@task, user_id: user.id), method: :post %></li>
        <% end %>
      </ul>
    </div>
  </span>
</div>
