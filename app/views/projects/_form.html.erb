<div class="container py-5">
  <%= simple_form_for @project do |f| %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?%>

    <div class='form-inputs'>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :status %>
      <%= f.input :price %>
      <%= f.input :due_date %>
    </div>

    <div class='form-actions'>
      <%= f.submit %>
    </div>
  <% end %>
</div>
